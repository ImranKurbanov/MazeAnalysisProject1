<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.mazeproject.ui.HelloController">

    <Canvas fx:id="mazeCanvas" width="600" height="600" />

    <HBox alignment="CENTER" spacing="15.0">
        <Label text="Size:" />
        <ComboBox fx:id="sizeComboBox" prefWidth="100.0" />

        <Label text="Algorithm:" />
        <ComboBox fx:id="algorithmComboBox" prefWidth="180.0" />

        <Button text="Generate" onAction="#onGenerateButtonClick" style="-fx-font-weight: bold;"/>
    </HBox>

    <HBox alignment="CENTER" spacing="20.0">
        <Button text="Solve DFS (Red)" onAction="#onSolveButtonClick"/>
        <Button text="Solve BFS (Blue)" onAction="#onBFSButtonClick"/>
        <Button text="Solve A* (Green)" onAction="#onAStarButtonClick"/>
    </HBox>

</VBox>
